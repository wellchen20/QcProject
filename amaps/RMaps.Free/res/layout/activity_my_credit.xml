<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtkj.cnpc.activity.MyCreditActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2f2f2f"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的积分"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:visibility="invisible"/>
    </LinearLayout>

    <com.mtkj.cnpc.activity.utils.CycleView
        xmlns:windows="http://schemas.android.com/apk/res/com.finals.canvas"
        android:id="@+id/cyl_credit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_getMoney"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg1"
        android:text="去兑换"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="#dcdcdc"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="积分明细"
        android:textColor="#000"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/lv_credit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        ></ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="每日登录、完成指定任务都可以获取积分哦~"
        android:gravity="center_vertical"
        android:background="@drawable/bg1"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
