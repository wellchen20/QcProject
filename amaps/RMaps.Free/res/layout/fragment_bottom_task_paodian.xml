<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_middle" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txt_info"
            style="@style/text_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/line_split_1"
            style="@style/splite_line_v_gray"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/vg_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_tount"
                style="@style/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:textColor="@color/doder_blue"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/vg_00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_task_jingpao"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="井炮源任务"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_conn"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="建立连接"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_conn_setting"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="连接设置"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_peidui"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="开始配对"
                android:visibility="visible" />

            <TextView
                android:id="@+id/line_split_00"
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_peidui_setting"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="配对设置"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_pipei"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="坐标匹配"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_pipei_setting"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="匹配设置"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_suoding"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="重新匹配"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/btn_suoding_done"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="锁定完成"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_paidui"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="请求排队"
                android:visibility="visible" />

            <TextView
                android:id="@+id/line_split_22"
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_06"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_paidui_redo"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="重新排队"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_paidui_details"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="排队详情"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_paidui_stop"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="结束排队"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_07"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_result_opt1"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="合格炮"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_result_opt2"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="废炮"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_result_opt3"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="原地再放炮"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_08"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_next_opt1"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="周边查询"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_next_opt2"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="关闭"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_09"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/bk_btn_normal"
            android:minHeight="@dimen/btn_item_min_heght"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_judge_opt1"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="放炮成功"
                android:visibility="visible" />

            <TextView
                style="@style/splite_line_v_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_judge_opt2"
                style="@style/text_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bk_btn_vg_gray"
                android:text="放炮失败"
                android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>